# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://kronos:kronos_password@localhost:5432/kronos_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth - Google Calendar
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback/google

# OAuth - Microsoft Calendar
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/callback/microsoft

# Cal.com
CALDOTCOM_API_KEY=your-caldotcom-api-key
CALDOTCOM_BASE_URL=https://api.cal.com/v1

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO